<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/details_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/cover_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vertical_guide"
        app:layout_constraintTop_toBottomOf="@id/middle_guide" />

    <EditText
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:inputType="textNoSuggestions"
        android:padding="8dp"
        android:paddingVertical="8dp"
        android:scrollbarSize="0dp"
        android:scrollbars="horizontal"
        android:scrollHorizontally="true"
        android:text="@string/name"
        android:textAlignment="center"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/get_food_label"
        app:layout_constraintEnd_toStartOf="@id/rating_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/get_food_label"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:background="@color/white"
        android:gravity="center_vertical|end"
        android:padding="2dp"
        android:text="@string/get_food_label"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/ready_time"
        app:layout_constraintEnd_toStartOf="@id/ready_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ready_time" />

    <TextView
        android:id="@+id/ready_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:background="@color/white"
        android:gravity="center"
        android:padding="2dp"
        android:text="@string/no_ready_time"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/upper_guide"
        app:layout_constraintStart_toEndOf="@id/get_food_label"
        app:layout_constraintTop_toBottomOf="@id/name" />

    <TextView
        android:id="@+id/closes_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:background="@color/white"
        android:gravity="center_vertical|end"
        android:padding="2dp"
        android:text="@string/closes_in"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/time_to_close"
        app:layout_constraintEnd_toStartOf="@id/time_to_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/time_to_close" />

    <TextView
        android:id="@+id/time_to_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:background="@color/white"
        android:gravity="center"
        android:padding="2dp"
        android:text="@string/time_to_close"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/middle_guide"
        app:layout_constraintStart_toEndOf="@id/closes_in"
        app:layout_constraintTop_toBottomOf="@id/upper_guide" />

    <TextView
        android:id="@+id/rating_label"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@color/white"
        android:gravity="center"
        android:padding="4dp"
        android:text="@string/rating_label"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/average_rating"
        app:layout_constraintEnd_toStartOf="@id/average_rating"
        app:layout_constraintStart_toEndOf="@+id/name"
        app:layout_constraintTop_toTopOf="@id/average_rating" />

    <TextView
        android:id="@+id/average_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:padding="4dp"
        android:text="@string/average_rating"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/phone_number"
        app:layout_constraintEnd_toStartOf="@id/vertical_guide"
        app:layout_constraintStart_toEndOf="@+id/rating_label"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/phone_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:background="@color/white"
        android:padding="2dp"
        android:text="@string/phone_number"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/takeout"
        app:layout_constraintEnd_toStartOf="@id/vertical_guide"
        app:layout_constraintTop_toBottomOf="@id/name" />

    <TextView
        android:id="@+id/takeout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:autoSizeMaxTextSize="16sp"
        android:autoSizeMinTextSize="14sp"
        android:autoSizeTextType="uniform"
        android:background="@color/white"
        android:padding="2dp"
        android:text="@string/takeout"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/delivery"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/phone_number"
        app:layout_constraintTop_toBottomOf="@+id/upper_guide" />

    <TextView
        android:id="@+id/delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:autoSizeMaxTextSize="16sp"
        android:autoSizeMinTextSize="14sp"
        android:autoSizeTextType="uniform"
        android:background="@color/white"
        android:padding="2dp"
        android:text="@string/delivery"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/takeout"
        app:layout_constraintEnd_toEndOf="@+id/phone_number"
        app:layout_constraintStart_toEndOf="@+id/takeout"
        app:layout_constraintTop_toTopOf="@+id/takeout" />

    <EditText
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:inputType="textNoSuggestions"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:scrollbarSize="0dp"
        android:scrollbars="vertical"
        android:singleLine="false"
        android:text="@string/description"
        android:textAlignment="viewEnd"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/cover_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/vertical_guide"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/address"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:padding="8dp"
        android:paddingBottom="8dp"
        android:text="@string/full_address"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@id/distance"
        app:layout_constraintEnd_toStartOf="@id/vertical_guide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/middle_guide" />

    <TextView
        android:id="@+id/distance_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:text="@string/distance_label"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/distance"
        app:layout_constraintEnd_toStartOf="@id/distance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/distance" />

    <TextView
        android:id="@+id/distance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@color/white"
        android:gravity="center_vertical|start"
        android:padding="4dp"
        android:text="@string/no_distance"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/vertical_guide"
        app:layout_constraintStart_toEndOf="@id/distance_label"
        app:layout_constraintTop_toBottomOf="@+id/address" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/upper_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/middle_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7" />

</androidx.constraintlayout.widget.ConstraintLayout>